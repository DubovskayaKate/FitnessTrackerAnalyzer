<Application x:Class="FitnessTrackerAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FitnessTrackerAnalyzer"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <system:String x:Key="HelpMessage" xml:space="preserve">
            1) To load data: File -> Load Data. If you load data two times, latest will be used;
            2) File name for loading: Must be in format day[number].json, example: day17.json;
            3) To show training plot: Select data grid row for user you need to display;
            4) Rows for users who have more than 20% difference between average &amp; best or worst result are green;
        </system:String>
        <system:String x:Key="AboutMessage" xml:space="preserve">The program collects user training info, plots it, exports data to JSON, XML, CSV;
            @Copyright Dubovskaya Kate, 2020</system:String>
    </Application.Resources>
</Application>
